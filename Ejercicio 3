// if else//

var age = 32
if (age >= 65){
    console.log("Usted obtiene sus ingresos de pensiÃ³n")
}else if ( age >= 18 && age < 65 ){
    console.log("Cada mes recibe un salario")
}else if (age < 18){
    console.log("Obtiene una asignaciÃ³n")
}else {
    console.log("El valor de la variable no es numÃ©rico")
}

//switch //

var day = "Sabado"
switch (day){
    case 'Lunes':
        console.log('Trabajar');
        break
    case 'Martes':
        console.log('Labor');
        break
    case 'Miercoles':
        console.log('Mitad de semana');
        break
    case 'Jueves':
        console.log('Ya casi descanso');
        break
    case 'Viernes':
        console.log('Ultimo dia');
        break
    case 'Sabado':
        console.log('pasear');
        break
    case 'Domingo':
        console.log('Descansar');
        break
    default:
       console.log('There is no such day')
}
